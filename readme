docker-compose up -d

docker ps


Access Kafka shell:


docker exec -it kafka bash

Create a topic:

kafka-topics --create --zookeeper zookeeper:2181 --replication-factor 1 --partitions 1 --topic test-topic

List topics:

kafka-topics --list --zookeeper zookeeper:2181


Run Producer

kafka-console-producer --broker-list localhost:9092 --topic test-topic

Run Consumer

docker exec -it kafka bash

kafka-console-consumer --bootstrap-server localhost:9092 --topic test-topic --from-beginning


virtual env:

python3 -m venv venv

source venv/bin/activate

pip install kafka-python


kafka-acls.sh \
  --bootstrap-server b-1.cluster.kafka.eu-central-1.amazonaws.com:9096 \
  --command-config /home/ec2-user/client.properties \
  --list


docker run -d -p 8080:8080 \
  -e KAFKA_BROKERS="b-1.mycluster.kafka.eu-central-1.amazonaws.com:9096,b-2.mycluster.kafka.eu-central-1.amazonaws.com:9096" \
  -e KAFKA_TLS_ENABLED=true \
  -e KAFKA_SASL_ENABLED=true \
  -e KAFKA_SASL_MECHANISM=SCRAM-SHA-512 \
  -e KAFKA_SASL_USER=adminuser \
  -e KAFKA_SASL_PASSWORD=AdminPassword123! \
  docker.redpanda.com/vectorized/console:latest

